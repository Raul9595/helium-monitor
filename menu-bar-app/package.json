{
  "name": "helium-monitor",
  "version": "1.2.1",
  "description": "Helium hotspot monitor",
  "homepage": "https://github.com/maskaravivek/helium-monitor",
  "main": "myApp.js",
  "repository": "https://github.com/maskaravivek/helium-monitor",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.maskaravivek.heliummonitor",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "maintainer": "Vivek Maskara",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "author": "vivek maskara, <maskaravivek@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "menubar": "^9.0.4",
    "universal-analytics": "^0.4.23",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5"
  }
}
